# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 spaces to indent!
indent_style = space
indent_size = 2

# every file is utf-8 by default
charset = utf-8

# Matches multiple files with brace expansion notation
# Set default charset
# [*.{js,py}]
# charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = tab
