# set the path for homebrew
if [ -x /opt/homebrew/bin/brew ]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
fi

eval $($(brew --prefix)/bin/brew shellenv)

if [ -x "$(command -v brew)" ]; then
    #eval "$(/opt/homebrew/bin/brew shellenv)"

    # use homebrew sqlite
    export PATH="$(brew --prefix sqlite)/bin:$PATH"

    #use homebrew curl
    export PATH="$(brew --prefix curl)/bin:$PATH"

    # make the default bundle file invisible
    export HOMEBREW_BUNDLE_FILE="$HOME/.Brewfile"
fi

# asdf version manager
if [ -d "${ASDF_DATA_DIR:-$HOME/.asdf}" ]; then
    export ASDF_DATA_DIR="${ASDF_DATA_DIR:-$HOME/.asdf}"
    export PATH="$ASDF_DATA_DIR/shims:$PATH"
    fpath=(${ASDF_DATA_DIR}/completions $fpath)

    # Source golang plugin setup if it exists
    if [ -f "$ASDF_DATA_DIR/plugins/golang/set-env.zsh" ]; then
        . "$ASDF_DATA_DIR/plugins/golang/set-env.zsh"
    fi
fi

# initialise completions with ZSH's compinit
autoload -Uz compinit
compinit

# if MacVim is installed use that instead
if [ -e /Applications/MacVim.app/ ]; then
  alias vim='/Applications/MacVim.app/Contents/bin/vim'
  alias vi='/Applications/MacVim.app/Contents/bin/vim'
fi

if [ -e /Applications/Nova.app/ ]; then
  alias coda='nova'
fi
